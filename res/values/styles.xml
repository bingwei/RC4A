<resources>
    <style name="Theme.RubyChina" parent="Theme.Sherlock.Light.DarkActionBar">
		<item name="android:actionBarItemBackground">@drawable/rc_selectable_background</item>
        <item name="actionBarItemBackground">@drawable/rc_selectable_background</item>
        
        <item name="android:actionBarStyle">@style/RubyChinaActionBarStyle</item>
        <item name="actionBarStyle">@style/RubyChinaActionBarStyle</item>
        
        <item name="android:actionBarTabStyle">@style/RubyChinaActionBarTabStyle</item>
        <item name="actionBarTabStyle">@style/RubyChinaActionBarTabStyle</item>
        
    </style>
    
    <!-- style for the action -->
    <style name="RubyChinaActionBarStyle" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/ruby_china_action_bar_bg</item>
    </style>
    
    <!-- style for the tabs -->
    <style name="RubyChinaActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar.Inverse">
        <item name="android:background">@drawable/actionbar_tab_bg</item>
        <item name="android:gravity">center</item>
    </style>
    
</resources>