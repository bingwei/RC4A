<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content"
    tools:ignore="UselessParent">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        >
	    <TextView 
	    	android:id="@+id/lb_token"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="8.0dip" 
	    	android:layout_marginTop="4.0dip" 
	    	android:textColor="@color/dark_gray"
	    	android:text="@string/app_user_token"
	    	/>
	    <EditText 
			android:id="@+id/token"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4.0dip" 
		    android:layout_marginRight="4.0dip"
		    android:layout_below="@+id/lb_token"
		    android:background="@android:drawable/editbox_background"
			android:hint="@string/hint_no_token"
			android:singleLine="true"
			/>
		<TextView 
		    android:id="@+id/lb_page_size"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/token"
		    android:layout_marginLeft="8.0dip" 
		    android:layout_marginTop="4.0dip" 
		    android:textColor="@color/dark_gray"
		    android:text="@string/app_page_size"
		    />
		<EditText 
			android:id="@+id/page_size"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4.0dip" 
		    android:layout_marginRight="4.0dip"
		    android:layout_below="@+id/lb_page_size"
		    android:background="@android:drawable/editbox_background"
			android:hint="@string/hint_page_size"
			android:inputType="number"
			/>
	    <Button
	        android:id="@+id/save"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/page_size"
	        android:background="@drawable/rc_button"
	        android:text="@string/action_save"
	        android:textSize="18sp"
	        android:textColor="@color/dark_gray"
	      />
	</RelativeLayout>
</RelativeLayout>
