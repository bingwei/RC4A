<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg_selector"
    android:padding="8dip"
    >
    <ImageView 
        android:id="@+id/gravatar"
        android:layout_width="48dip"
	    android:layout_height="48dip"
	    android:src="@drawable/default_gravatar"
	    android:contentDescription="@string/hint_image_alt"
        />
	<TextView 
	    android:id="@+id/user_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/gravatar"
	    android:layout_margin="8dip"
	    android:textSize="16sp"
	    />
	<TextView 
	    android:id="@+id/floor"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toLeftOf="@+id/forward"
	    android:layout_margin="8dip"
	    android:textSize="16sp"
	    />
	<ImageView
        android:id="@+id/forward"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:src="@drawable/social_forward"
        />
	<TextView 
	    android:id="@+id/body"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="8dip"
	    android:layout_marginRight="8dip"
	    android:layout_toRightOf="@+id/gravatar"
	    android:layout_below="@+id/user_name"
	    android:textColor="#ff000000"
	    />
</RelativeLayout>