<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topic_body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/title_bar" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/format_bar_bg" 
        android:padding="8.0dip" 
        >
        <ImageView 
		    android:id="@+id/gravatar"
		    android:layout_width="52dip"
		    android:layout_height="52dip"
		    android:padding="4dip"
		    android:src="@drawable/default_gravatar"
		    android:contentDescription="@string/alt_avatar"
		    />
	    <TextView 
	        android:id="@+id/title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/gravatar"
	        android:paddingLeft="4dip"
	        android:textSize="20sp"
	        android:textColor="#ff000000"
	        android:gravity="center_vertical"
	        android:shadowColor="#ffffffff" 
	        android:shadowDx="0.0" 
	        android:shadowDy="1.0" 
	        android:shadowRadius="1.0"
	        />
	    <TextView 
	        android:id="@+id/desc"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/gravatar"
	        android:layout_below="@+id/title"
	        android:paddingLeft="4dip"
	        android:textSize="14sp"
	        android:textColor="@color/light_gray"
	        android:gravity="center_vertical"
	        android:shadowColor="#ffffffff" 
	        android:shadowDx="0.0" 
	        android:shadowDy="1.0" 
	        android:shadowRadius="1.0"
	        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/body"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/title_bar"
	    android:background="#ffffffff"
	    android:padding="10.0dip"
	    android:textSize="18.0sp"
	    android:textColor="#ff464646"
        />
</RelativeLayout>